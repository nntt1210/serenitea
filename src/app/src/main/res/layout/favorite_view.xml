<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/favorite_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/background_favorite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/favorite_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/theme"
        android:textSize="13sp"
        tools:text="13/08/2021" />

    <ImageButton
        android:id="@+id/favorite_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/favorite_delete"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_favorite_share" />

    <ImageButton
        android:id="@+id/favorite_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete" />

    <TextView
        android:id="@+id/favorite_content"
        android:layout_width="371dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:alpha=".54"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/text_color"
        android:textSize="14sp"
        tools:text="@string/sample_quote_send" />
</RelativeLayout>